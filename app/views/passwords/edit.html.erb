<!-- Edit password page -->
<h1>Edit Password</h1>
<%= form_with model: Current.user, url: edit_password_path do |f| %>
  <p>
  <%= f.label 'password:'%><br>
  <%= f.password_field :password, :class => "input-field" %>
  </p>
  <p>
  <%= f.label 'password_confirmation:'%><br>
  <%= f.password_field :password_confirmation, :class => "input-field" %>
  </p>
  <p class="flexbox justify-space-around button submit">
  <%= f.submit 'Update'%>
  </p>
<% end %>
