<%= stylesheet_link_tag "navbar.css" %>
<header>
  <div class="container">
    <%= image_tag "bike_logo.png", class: "bike_logo" %>
    <div class = "header user_name">
    <% if @user %>
      Hello <%=@user.username %>
      <% end %>
      </div>
    <nav class="header">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Membership", membership_path %></li>
        <li><%= link_to "Rent", rent_path %></li>
        <% if @user %>
          <li><%= link_to "Logout", logout_path, method: :delete%></li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
