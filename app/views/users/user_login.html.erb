<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">

    <h1>Login</h1>

    </div>

    <%= form_with url: create_session_path, remote: true, method: 'post' do |form| %>
    <% flash.each do |type, msg| %>
        <div>
            <%= msg %>
        </div>
    <% end %>
    <p>Email: <%= form.email_field :email, :placeholder => "jappleseed@apple.orchard" %></p> <br>
    <%= form.submit "Send Verification Code" %>
  <% end %>

  <%= link_to "Create Account", "/create_account" %>

  </div>
</div