<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">

    <h1>Confirm deletion</h1>
        <%= button_to "Back to Profile", "/profile", method: 'get', class: "button"%>

        <% @rental = Rental.find_by(user: @user, end_station: nil) %>
        <% if @rental %>
        <p> You cannot delete your account while a rental is active. Please <a href="/current_ride" style = "color: var(--light-text-color)"> return your bike(s)</a> before proceeding. </p>
        <% else %>
        <p>Are you sure you want to delete your account? This action cannot be undone.</p>

        <%= form_for(@user, method: 'delete', url: destroy_user_path(@user.id)) do |f| %>
            <%= f.submit("DELETE ACCOUNT (Yes, I'm sure)", class: "button deletebutton")%>
        <% end %> 
        <% end %>


    </div>  
  </div>
</div>