<%= form_with model: @user do |form| %>
    <p>First name: <%= form.text_field :first_name, :placeholder => "Johnny" %></p> <br>
    <p>Last name: <%= form.text_field :last_name, :placeholder => "Appleseed" %></p> <br>
    <p>Email: <%= form.email_field :email, :placeholder => "jappleseed@apple.orchard" %></p> <br>
    <%= form.submit "Create account" %>
  <% end %>