<div>  
  <head>
  <title>Review Station - ValetBike</title>
</head>
<body>


  <section class="page-section">

    <h1 class="section-title">Review Station</h1>
    <div class="section-inner flexbox horizontal justify-content-center">
    
    <%= form_with url: review_path, method: :post, local:true do |f| %>

      <tr>
      <body> 
        <h1 align="center">At ValetBike, we value your feedback. 
        Leave your <br> questions, comments, and concerns below 
        and <br>a team member will reach out regarding your response.<br></h1> 
        <br>
      </body> 
      </tr>

      <tr>
      <th><b><% f.label (:station_id)%>Select Station</b></th>
        <div style="color: black;">
          <td><%= f.collection_select :station_id, Station.all, :id, :address, prompt: true%></td>
          <br><br>
      </tr>

      <tr>
      <th><f.label for :message><b> Message </b></label></th>
      <td><textarea style="height:300px;width:500px" type="string" name="message"class="form-control" id=:message></textarea></td>
        <%= puts :message %>
      </tr>
      <br>
      <br>
      <%= f.submit class: "btn button btn-primary" %>
      <% end %>
    </div>
  </section>
</body>
  
</div>
