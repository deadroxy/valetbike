<table summary="Fill the form fields">
<tr>
        <td><%= f.hidden_field(:user_id, readonly: "readonly", class:"input") %></td> 
    </tr>
    <tr>
        <th>Name on card</th>
        <td><%= f.text_field(:name, placeholder: "Firstname Lastname", class:"input") %></td> 
    </tr>

    <tr>
        <th>Card number</th>
        <td><%= f.text_field(:card_number, placeholder: "0000000000000000", class:"input")  %></td> 
    </tr>
    
    <tr>
        <th>CVV</th>
        <td><%= f.text_field(:cv, placeholder: "000", class:"input") %></td> 
    </tr>
    
    <tr>
        <th>Expiration Month</th>
        <td><%= f.select(:exp_month,["01","02","03","04","05","06","07","08","09","10","11","12"] , {selected: @card.exp_month},{ :class=>'input' }) %></td> 
    </tr>

    <tr>
        <th>Expiration Year</th>
        <td><%= f.select(:exp_year,["2023","2024","2025","2026","2027","2028","2029","2030","2031","2032","2033"], {selected: @card.exp_year}, { :class=>'input' }) %></td> 
    </tr>

    <tr>
        
        <td><%= f.hidden_field(:created_at, readonly: "readonly") %></td> 
    </tr>

    <tr>
        
        <td><%= f.hidden_field(:updated_at, readonly: "readonly") %></td> 
    </tr>

</table>
<p class="small">Please note that this card will be charged for all rentals. </p>
<p class="small">We have a flat fee of $5 per bike rented.</p>
