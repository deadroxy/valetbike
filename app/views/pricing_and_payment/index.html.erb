  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">
      Pricing and Payment
    </div>  



  <form>
  <select name = "station">
  <% @stations.each do |station|%>
    <option><%=station.address%></option>
  <%end%>
  </select>
  <br/>
  <input type="submit" value="select station">
  </form>

  <% if params[:station] or params[:bike]%>
  <br/>
  Bikes at <%=@chosenStation.address %>:
    <form>
  <select name = "bike">
  <% @theseBikes.each do |bike|%>
    <option><%=bike.identifier%></option>
  <%end%>
  </select>
  <br/>
  <input type="submit" value="select bike">
  </form>
  <br/>
  <%if params[:bike]%>
    Selected bike <%= @chosenBike.identifier %> at <%= @chosenStation.address%>
    <br/>
    <%= link_to 'Start Ride', ride_path(@chosenBike)%>
  <%end%>
  <% end%>
