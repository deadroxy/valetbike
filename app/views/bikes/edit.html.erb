<!DOCTYPE html>
<html>
<!-- Allows a user to edit a bike-->

  <div class="bikes edit">
    <h2>Edit bike</h2>

    <%= form_for(@bike) do |f| %>
      <% # url: bike_path(@bike), method: 'patch' %>

      <%= render(partial: 'form', locals: {f: f}) %>

      <div>
        <%= f.submit("Save Changes", class:"form-buttons") %>
      </div>

    <% end %>
  </div>

</html>