<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">
      Your Account
    </div>
    <p> Username: <%=current_member.username%> </p>
    <p> Email: <%=current_member.email%> </p>
    <h1> Current Rides </h1>
    <table>
      <tr>
        <th> Start Time </th>
        <th> End Time </th>
        <th> Actions </th>
      </tr>
      <% current_member.rides.each do |r| %>
        <% if !r.returned %>
        <tr>
          <td> <%=r.timeStart.strftime('%m/%d/%Y %I:%M %p')%> </td>
          <td> <%=r.timeEnd.strftime('%m/%d/%y %I:%M %p')%> </td>
          <td> <%=link_to "Return", edit_bike_path(r.bike_id, {ride_id: r.id})%> </td>
        </tr>
        <% end %>
      <% end %>
    </table>
    <h1> Ride History </h1>
    <table>
      <tr>
        <th> Start Time </th>
        <th> End Time </th>
      </tr>
      <% current_member.rides.each do |r| %>
        <% if r.returned %>
        <tr>
          <td> <%=r.timeStart.strftime('%m/%d/%y %I:%M %p')%> </td>
          <td> <%=r.timeEnd.strftime('%m/%d/%y %I:%M %p')%> </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
