<head><% content_for(:title, "Sign Up") %></head>
<div class="page-section flexbox vertical stretch">
  <div class="flexbox vertical center">
    <h2 class="user-page-title">Sign up</h2><br/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <h2 class="field-title"><%= f.label :email %></h2>
        <div class="field-textbox"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>

      <div class="field">
        <h2 class="field-title"><%= f.label :username %></h2>
        <div class="field-textbox"><%= f.text_field :username, autocomplete: "username" %></div>
      </div>

      <div class="field">
      <h2 style="margin-left: 41px">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </h2>
        <div class="field-textbox"><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>

      <div class="field">
        <h2 class="field-title"><%= f.label :password_confirmation %></h2>
        <div class="field-textbox"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
      
      <br>
      <button class="actions">
        &nbsp;Sign up
        <%= f.submit " " %>
      </button>
      <br>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
