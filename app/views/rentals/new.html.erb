<%= link_to('back to stations',rentals_path, :class => 'back-link' )%>
<div class="rental new">
    <h2>Rental Form</h2>
   <br>
    <h3>You selected <%= @bike.theme_name%> from the <%= Station.find_by(identifier: @rental.start_station_id).theme_name%>! </h3>
    <h4>Address: <%= @start_station.address%> </h4>
   <br>
   <p>You will be charged a flat fee of $5 for this rental.</p>
    <div> Please press rent to start the rental. </div>
        <%=form_for(@rental) do |f| %>
        
            <%= render(partial: 'form', locals: {f: f}) %>
        
            <div>
                <%= f.submit("Unlock " + @bike.theme_name, class:"form-buttons") %>
            </div>
    <% end %>

    
</div>

               