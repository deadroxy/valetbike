<div class="rental new">
    <h2>Rental Form</h2>
   <br>
    <h3> You selected <%= Bike.find_by(identifier: @rental.bike_id).theme_name%> from the <%= Station.find_by(identifier: @rental.start_station_id).theme_name%>! </h3>
    <h4>Address: <%= Station.find_by(identifier: @rental.start_station_id).address%> </h4>
   <br>
   <p>You will be charged a flat fee of $5 for this rental.</p>
    <div> Please press "Unlock" to start the rental. </div>
        <%=form_for(@rental) do |f| %>
        
            <%= render(partial: 'form', locals: {f: f}) %>
        
            <div>
                <%= f.submit("Unlock " + Bike.find_by(identifier: @rental.bike_id).theme_name, class:"form-buttons") %>
            </div>
    <% end %>

    
</div>

               