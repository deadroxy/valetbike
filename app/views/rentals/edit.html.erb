<div>
  <h1 class="font-bold text-4xl">Rental#edit</h1>
  <p>Find me in app/views/rental/edit.html.erb</p>
</div>


<div class="rentals edit">
  <h2>Return rental</h2>

  <%= form_for @rental, method: :patch do |form| %>

    <%= form.datetime_local_field :return %>
    <%= form.select :station_id, Station.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
    
    <div class="form-buttons">
      <%= form.submit "return rental" %>
    </div>

  <% end %>
</div>