<div class="page-section flexbox vertical">
  <div class="section-inner flexbox vertical">
    <div class="section-title">
    Stations
    </div>
    <p>We currently have the following stations available:</p>
    <div class="station-bike-space">
        <% if @stations.present? %>
        <%= render(partial: "rentals/station", collection: @stations, as: :station) %>
        <% else %>
        <div class="empty">
            We currently no stations or bikes to rent.
        </div>
        <% end %>
    </div>
	</div>
</div>