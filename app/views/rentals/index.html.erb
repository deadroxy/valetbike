<div>
  <h1 class="font-bold text-4xl">Your Rentals</h1>
  <p>Find me in app/views/rental/index.html.erb</p>
</div>

  <h2>Your rentals</h2>

  <table class="listing" summary="Rental list" style="width: 100%;">
    <tr class="header">
      <th>Checkout time</th>
      <th>Return time</th>
      <th>Station</th>
      <th>Bike id</th>
      <th>Rental code</th>
    </tr>
    <% @rentals.each do |rental| %>
    <tr>
      <td><%= rental.checkout%></td> 
      <td><%= rental.return %></td>
      <td><%= rental.station_id %></td>
      <td><%= rental.bike_id %></td>
      <td><%= rental.number %></td>
      
      <% if rental.return == nil %>
      <td class="actions">
        <%= link_to("Return Bike", edit_rental_path(rental), class: 'action edit') %>
      </td>
      <% end %>


    </tr>
    <% end %>
  </table>
</div>