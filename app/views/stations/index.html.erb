<head>

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.2/dist/leaflet.css" integrity="sha256-sA+zWATbFveLLNqWO2gtiw3HL/lh1giY/Inf1BJ0z14=" crossorigin="" />
  <script src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js" integrity="sha256-o9N1jGDZrf5tS+Ft4gbIK7mYMipq9lqpVJ91xHSyKhg=" crossorigin=""></script>

  <script src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js"
  integrity="sha256-o9N1jGDZrf5tS+Ft4gbIK7mYMipq9lqpVJ91xHSyKhg="
  crossorigin="">
  </script>
  <% content_for(:title, "Station Map/List") %>
  
</head>

<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    
    <div class="section-title">
      Station Map/List
    </div>
    <div class="flexbox vertical stretch">
      <section>
        <div class="stations-map">
          <div>
            Station Map
          </div>
          <div id="map"></div>
          <script>
            var map = L.map('map').setView([42.3163031, -72.6424982], 13); // centered at Smith College
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
              maxZoom: 19,
              attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);

            // var randomMarker = L.marker([42.30, -72.64],{
            //   title: "Really Good Name Station"
            // })
            // .addTo(map)
            // .bindPopup("<h1>Really Good Name Station</h1> <p>This is the marker text</p> <img src = '../../assets/bike_station.jpeg'/>");
            
            var pulaskiMarker = L.marker([42.3173232, -72.6330437],{
              title: "Pulaski Park"
            }).addTo(map);
            pulaskiMarker.bindPopup("<h1>Pulaski Park</h1> <p>Pulaski Park Station has # docks, # docked bikes. ...</p><a href='https://goo.gl/maps/DrLW1RmmBFJePwGR6' target='_blank'>Pulaski Park Address</a><img src= '../../assets/PulaskiPark.jpeg'/>");
            
            var forbesLibMarker = L.marker([42.316749, -72.635711], {
              title: "Forbes Library"
            }).addTo(map);
            forbesLibMarker.bindPopup("<h1> Forbes Library </h1> <p>Welcome to Forbes Library. ...</p><a href='https://goo.gl/maps/WvWT6oWJWc9wqsLt5' target='_blank'>Forbes Library Address</a><img src= '../../assets/Forbes_Library.jpeg'/>");


            var JMGMarker = L.marker([42.3194483, -72.6402443],{
              title: "John M Greene"
            }).addTo(map);
            JMGMarker.bindPopup("<h1>John M Greene</h1> <p>John M Greene Station has # docks, docked bikes. ...</p> <a href='https://goo.gl/maps/9LzMWy66P5jvre8XA' target='_blank'>John M. Greene Address</a><img src= '../../assets/JMG.jpeg'/>");


            var oneBridgeStreetMarker = L.marker([42.3204752, -72.6325833],{
              title:"1 Bridge Street"
            }).addTo(map);
            oneBridgeStreetMarker.bindPopup("<h1>1 Bridge Street</h1> <p>1 Bridge Street Station has # docks, # docked bikes. ...</p> <a href='https://goo.gl/maps/9E5gRdPnPTodrmaj9' target='_blank'>1 Bridge Street Address</a> <img src= '../../assets/1BridgeStreet.jpeg'/>");

            var ninetyNineMainStMarker = L.marker([42.3195189, -72.632782],{
              title:"99 Main Street"
            }).addTo(map);
            ninetyNineMainStMarker.bindPopup("<h1>99Main Street</h1> <p>99 Main Street Station has # docks, # docked bikes. ...</p><a href='https://goo.gl/maps/Wb5CZzD9pcWNzbCJ7' target='_blank'>99 Main Street Address</a><img src= '../../assets/99MainStreet.jpeg'/>");
            
          </script>
        </div>
        <div class="stations-list">
          <div class="stations-list-title">
            Station List
          </div>  
          <% if @stations.present? %>
            <%= render(partial: "stations/row", collection: @stations, as: :station) %>
          <% else %>
          <div class="empty">
            No stations found.
          </div>
          <% end %>
        </div>
      </section>
    </div>
    <!-- <em></em> -->
	</div>
</div>
