
!DOCTYPE html>
<html>
<head>
  <meta charset = "UTI-8">
	<title>Valetbike - Stations</title>
</head>

<body>
  <nav>
    <div class = "container">
      <h2>Valetbike Stations</h2>
      <div class = "menu">
        <%= link_to("Home", root_path, :class => 'back-link')%>
        <%= link_to("Map", {:action => 'map'}) %>

        <%= if logged_in?
           link_to("Stats", {:controller => 'users', :action => 'stats'})
        end %>
        <%= if logged_in?
           link_to("Settings", {:controller => 'users', :action => 'settings'})
        end %>
        <%= if logged_in?
          link_to("Log Out", logout_path, method: :delete)
        end %>
      </div>
    </div>
  </nav>

  <div class="page-section flexbox vertical stretch">

<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="flexbox vertical stretch">
      <% if @stations.present? %>
        <%= render(partial: "stations/row", collection: @stations, as: :station) %>
      <% else %>
        <div class="empty">
          No stations found.
        </div>
      <% end %>
    </div>
	</div>
  </div>
</body>
</html>

