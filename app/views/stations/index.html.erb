
!DOCTYPE html>
<html>
<head>
  <meta charset = "UTI-8">
	<title>Valetbike - Stations</title>
</head>

<body>
  <nav>
			<div class = "container">
				<h1>Welcome to ValetBike!</h1>

				<div class = "menu">
					<% if logged_in? %>
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<%=  current_user().first_name %>
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<%= link_to("Stats", 'stats', class: "dropdown-item") %>
							<%= link_to("Setting", 'settings', class: "dropdown-item") %>
							<div class="dropdown-divider"></div>
							<%= link_to("Log Out", sessions_destroy_path, class: "dropdown-item") %>
						</div>
					<% else %>
						<%= link_to("Login", login_path)%>
						<%= link_to("Create Account", new_user_path)%>
					<% end %>
					<%= link_to("Stations", stations_path)%>
          <%= link_to("Map", stations_map_path)%>
				</div>
				<!-- Only visible when webpage is minimized !-->
				<button class = "hamburger">
					<span></span>
					<span></span>
					<span></span>
				</button>
			</div>
		</nav>
  <div class="page-section flexbox vertical stretch">

<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="flexbox vertical stretch">
      <% if @stations.present? %>
        <%= render(partial: "stations/row", collection: @stations, as: :station) %>
      <% else %>
        <div class="empty">
          No stations found.
        </div>
      <% end %>
    </div>
	</div>
  </div>
</body>
</html>
