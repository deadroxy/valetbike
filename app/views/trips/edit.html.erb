<h1>Return</h1>
<%if logged_in?%>
    <%= form_for( @trip, data: { turbo: false } )do |f| %>
        <div>
        <%= f.label :trip_id %><br>
        <%= f.text_field :trip_id , class: 'form-control' %>
        </div>

         <div>
            <%= f.label :bike_id %><br>
            <%= f.number_field :bike_id, class: 'form-control'  %>
        </div>
        <div>
            <%= f.label :end_station %><br>
            <%= f.select :end_station_id, Station.all.collect { |s| [ s.identifier.to_s()+" "+ s.name ]  }, include_blank: false %>
		
        </div>
        <div>
        <%= f.submit "edit"%>
        </div>
    <% end %>
<%else%>
    <div>Please <%=link_to "sign in", sign_in_path%> to pay</div>
<%end%>


