
<div class = "Login">
<h1>Log In</h1>


<!-- error msg for invalid input -->
 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Log in" , class:"btn btn-outline-info"%>
<% end %>
</div>



<div>
<%= link_to "Sign Up!", '/signup' %>
</div>
